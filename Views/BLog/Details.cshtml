            }

            .content-body blockquote {
                border-left: 4px solid #667eea;
                padding-left: 20px;
                margin: 2rem 0;
                font-style: italic;
                background: #f8f9fa;
                padding: 20px;
                border-radius: 0 10px 10px 0;
                position: relative;
            }

                .content-body blockquote::before {
                    content: '"';
                    position: absolute;
